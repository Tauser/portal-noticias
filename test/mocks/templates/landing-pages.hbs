{{#> templates/base--breadcrumbs
                title=title
                description=description
                breadcrumbs-itens=breadcrumbs-itens }}

    {{#*inline "content-block-base--breadcrumbs"}}
        <div class="l-identificacao-landing">
            <div class="container">
                <h1 class="titulo-landing">
                    {{#if main-heading}}
                        {{main-heading}}
                    {{else}}
                        Título não definido
                    {{/if}}
                </h1>

                {{#if menu-itens}}
                    <a role="button" data-toggle="collapse" aria-expanded="false" href="#js-nesta-secao" class="nesta-secao collapsed">
                        <span>Nesta seção</span>
                        <span class="nesta-secao__icon"></span>
                    </a>
                    <div id="js-nesta-secao" class="collapse">
                        <ul class="localnav">
                        {{#parseJson menu-itens}}
                            {{#each this }}
                                <li class="localnav__item">
                                    <a class="localnav__link" href="{{link}}" {{scrolling}}>{{rotulo}}</a>
                                </li>
                            {{/each}}
                        {{/parseJson}}
                        </ul>
                    </div>
                {{/if}}
            </div>
        </div>

        {{#> content-block-landing-pages}}
                <h1>Conteúdo base da template landing</h1>
        {{/content-block-landing-pages}}
    {{/inline}}

{{/templates/base--breadcrumbs}}
